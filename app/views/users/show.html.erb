<h1>Welcome, <%= @user.name %></h1>

<%= render 'photos/form' %>

<% if @user_photos.any? %>
  <h4>Here are your photos:</h4>
  <% @user_photos.each do |photo| %>
    <%= link_to image_tag(photo.file.url), photo_path(photo) %>
  <% end %>
<% else %>
  <h4>No photos currently in your Thumblr, thilly.</h4>
<% end %>
